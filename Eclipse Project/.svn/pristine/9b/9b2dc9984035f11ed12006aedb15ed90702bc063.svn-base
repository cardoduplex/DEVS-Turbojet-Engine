package experiment.toolkit;

import org.apache.commons.lang3.StringUtils;

/**
 * The Class Value.
 */
public class Value {

  /** The alt name. */
  private String altName;

  /** The group. */
  private String group;

  /** The value. */
  private double value;

  /** The units. */
  private String units;

  /** The description. */
  private String description;

  /**
   * Instantiates a new value.
   *
   * @param group the group
   * @param altName the alt name
   * @param value the value
   */
  public Value(final String group, final String altName, final double value) {
    this.altName = altName;
    this.group = group;
    this.value = value;
    this.units = null;
    this.description = null;
  }

  /**
   * Instantiates a new value.
   *
   * @param group the group
   * @param altName the alt name
   * @param value the value
   * @param units the units
   */
  public Value(final String group, final String altName, final double value, final String units) {
    this.altName = altName;
    this.group = group;
    this.value = value;
    this.units = units;
    this.description = null;
  }

  /**
   * Instantiates a new value.
   *
   * @param group the group
   * @param altName the alt name
   * @param value the value
   * @param units the units
   * @param description the description
   */
  public Value(final String group, final String altName, final double value, final String units, final String description) {
    this.altName = altName;
    this.group = group;
    this.value = value;
    this.units = units;
    this.description = description;
  }

  /**
   * Gets the alt name.
   *
   * @return the alt name
   */
  public String getAltName() {
    return altName;
  }

  /**
   * Gets the group.
   *
   * @return the group
   */
  public String getGroup() {
    return group;
  }

  /**
   * Gets the value.
   *
   * @return the value
   */
  public double getValue() {
    return value;
  }

  /**
   * Sets the value.
   *
   * @param value the new value
   */
  public void setValue(double value) {
    this.value = value;
  }

  /**
   * Checks for units.
   *
   * @return true, if successful
   */
  public boolean hasUnits() {
    return units != null && !units.isEmpty();
  }

  /**
   * Gets the units.
   *
   * @return the units
   */
  public String getUnits() {
    return units == null ? "" : units;
  }

  /**
   * Sets the units.
   *
   * @param units the new units
   */
  public void setUnits(String units) {
    this.units = StringUtils.trim(units);
  }

  /**
   * Checks for description.
   *
   * @return true, if successful
   */
  public boolean hasDescription() {
    return description != null && !description.isEmpty();
  }

  /**
   * Gets the description.
   *
   * @return the description
   */
  public String getDescription() {
    return description == null ? "" : description;
  }

  /**
   * Sets the description.
   *
   * @param description the new description
   */
  public void setDescription(String description) {
    this.description = StringUtils.trim(description);
  }
}
