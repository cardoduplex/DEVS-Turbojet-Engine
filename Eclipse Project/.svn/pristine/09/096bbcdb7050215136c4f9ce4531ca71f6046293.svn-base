package experiment.design;

import experiment.toolkit.ExperimentLog;
import experiment.toolkit.Settings;
import experiment.toolkit.SettingsSingleton;
import experiment.toolkit.ValueSet;

/**
 * The Class DataRecorder.
 */
public class DataRecorder {

  /** The settings. */
  protected final Settings settings = SettingsSingleton.getInstance();

  /** The log. */
  protected ExperimentLog log;

  /** The dump value set. */
  private boolean dumpValueSet;

  /**
   * Instantiates a new data recorder.
   *
   * @param name the name
   */
  public DataRecorder(final String name) {
    log = new ExperimentLog(name);
    dumpValueSet = settings.lookupBool("ExperimentEngine_DumpValueSet", "true");
  }

  /**
   * Initialize.
   */
  public void initialize() {
  }

  /**
   * Process.
   *
   * @param valueSet the value set
   */
  public void process(final ValueSet valueSet) {
    if (dumpValueSet) {
      log.out("-------- ValueSet dump for key '" + valueSet.getKey() + "' --------");
      valueSet.dump("[" + valueSet.getVersion() + "]  ");
    }

    /* TODO dump to spreadsheet */

    /* TODO dump factors to JMP input file */
  }
}
