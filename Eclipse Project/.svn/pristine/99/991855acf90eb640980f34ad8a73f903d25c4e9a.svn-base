package experiment.toolkit;

/**
 * The Class ExperimentLog.
 */
public class ExperimentLog {

  /** The name. */
  private String name;

  /**
   * Instantiates a new experiment log.
   *
   * @param name the name
   */
  public ExperimentLog(String name) {
    this.name = name;
  }

  /**
   * Out.
   *
   * @param message the message
   */
  public void out(final String message) {
    System.out.println(name + ": " + message);
  }

  /**
   * Err.
   *
   * @param message the message
   */
  public void err(final String message) {
    System.err.println(name + ": " + message);
  }

  /**
   * Err.
   *
   * @param message the message
   * @param e the e
   */
  public void err(final String message, final Exception e) {
    err(message, e, true);
  }

  /**
   * Err.
   *
   * @param message the message
   * @param e the e
   * @param printStackTrace the print stack trace
   */
  public void err(final String message, final Exception e, final boolean printStackTrace) {
    System.err.println(name + ": " + message + ": " + e.getMessage());
    if (printStackTrace)
      e.printStackTrace();
  }

  /**
   * Gets the name.
   *
   * @return the name
   */
  public String getName() {
    return name;
  }

  /**
   * Sets the name.
   *
   * @param name the new name
   */
  public void setName(final String name) {
    this.name = name;
  }
}
