package ExperimentMod;

import model.modeling.message;

/**
 * The Class ExperimentDataRecorder.
 */
public class ExperimentDataRecorder extends ExperimentBase {

  /**
   * Instantiates a new experiment data recorder.
   */
  public ExperimentDataRecorder() {
    this("ExperimentDataRecorder");
  }

  /**
   * Instantiates a new experiment data recorder.
   *
   * @param name the name
   */
  public ExperimentDataRecorder(final String name) {
    super(name);

    addInport("xIn");
  }

  /* (non-Javadoc)
   * @see ExperimentMod.ExperimentBase#initialize()
   */
  @Override
  public void initialize() {
    super.initialize();
    passivate();
  }

  /* (non-Javadoc)
   * @see model.modeling.atomic#deltext(double, model.modeling.message)
   */
  @Override
  public void deltext(final double e, final message x) {
    //clock = clock + e;
    Continue(e);
    if (phaseIs("passive"))
      for (int i = 0; i < x.getLength(); i++)
        if (messageOnPort(x, "xIn", i)) {
          job = x.getValOnPort("xIn", i);
          holdIn("active", 0);
          log.out("Process experiment " + job.getName());
        }
  }

  /* (non-Javadoc)
   * @see model.modeling.atomic#deltint()
   */
  @Override
  public void deltint() {
    //clock = clock + sigma;
    passivate();
  }
}
