package turbojet.toolkit;

import java.util.HashMap;

public class ValueSet {

  private int experiment;

  private int counter;

  private HashMap<String, Value> valueMap = new HashMap<String, Value>();

  public ValueSet(final int experiment) {
    this.experiment = experiment;
    counter = 0;
  }

  public String getKey() {
    return "VSet" + experiment + "_" + counter;
  }

  public void incrementCounter() {
    counter = counter + 1;
  }

  public void debug() {
    System.out.println("Experiment="+experiment+"\nCounter="+counter+"\nvalues from the hash table...");
  }

  public void addValue(final String name, final Object value) {
    valueMap.put(name, new Value(name, value));
  }

  public class Value {

    public String name;

    public Object value;

    public Value(final String name, final Object value) {
      this.name = name;
      this.value = value;
    }
  }
}
