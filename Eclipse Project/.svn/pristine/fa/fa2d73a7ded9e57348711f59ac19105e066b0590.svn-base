package experiment.design;

import experiment.design.util.ExperimentMonitor;
import experiment.design.util.ExperimentMonitorLoad;
import experiment.model.ExperimentEngineBackPorch;
import experiment.toolkit.ValueSet;

/**
 * The Class BackPorch.
 */
public class BackPorch extends ExperimentEngineBackPorch {

  /** The experiment monitor. */
  private ExperimentMonitor experimentMonitor;

  /** The dump experiment monitor. */
  private boolean dumpExperimentMonitor;

  /**
   * Instantiates a new back porch.
   *
   * @param name the name
   */
  public BackPorch(final String name) {
    super(name);
    dumpExperimentMonitor = settings.lookupBool("ExperimentEngine_DumpExperimentMonitor", "true");
    loadExperiment();
  }

  /* (non-Javadoc)
   * @see experiment.model.ExperimentEngineBackPorch#initialize()
   */
  @Override
  public void initialize() {
    super.initialize();
  }

  /**
   * Load experiment.
   */
  private void loadExperiment() {
    experimentMonitor = new ExperimentMonitor();
    final ExperimentMonitorLoad experimentMonitorLoad = new ExperimentMonitorLoad();
    experimentMonitorLoad.load(experimentMonitor);
    if (dumpExperimentMonitor)
      experimentMonitor.dump();
  }

  /* (non-Javadoc)
   * @see experiment.model.ExperimentEngineBackPorchInterface#processValueSet(experiment.toolkit.ValueSet)
   */
  public void processValueSet(final ValueSet valueSet) {
    /* TODO Select the correct experiment monitor and apply the condition(s) to the valueSet to determine if there should be additional operational passes. */
    if (valueSet.getPass() >= 1)
      valueSet.terminateRun();
  }
}
