package ExperimentMod;

import GenCol.entity;
import model.modeling.message;
import experiment.toolkit.ValueSet;

/**
 * The Class ExperimentDataRecorder.
 */
public class ExperimentDataRecorder extends ExperimentBase {

  /** The current value set. */
  protected ValueSet currentValueSet;

  /**
   * Instantiates a new experiment data recorder.
   */
  public ExperimentDataRecorder() {
    this("ExperimentDataRecorder");
  }

  /**
   * Instantiates a new experiment data recorder.
   *
   * @param name the name
   */
  public ExperimentDataRecorder(final String name) {
    super(name);

    addInport("xIn");
  }

  /* (non-Javadoc)
   * @see ExperimentMod.ExperimentBase#initialize()
   */
  @Override
  public void initialize() {
    super.initialize();
    currentValueSet = null;
    passivate();
  }

  /* (non-Javadoc)
   * @see model.modeling.atomic#deltext(double, model.modeling.message)
   */
  @Override
  public void deltext(final double e, final message x) {
    Continue(e);
    if (phaseIs("passive"))
      for (int i = 0; i < x.getLength(); i++)
        if (messageOnPort(x, "xIn", i)) {
          final entity job = x.getValOnPort("xIn", i);
          if (valueSetCache.test(job.getName()))
            currentValueSet = valueSetCache.popFinal(job.getName());
          else
            log.err("ValueSet not found in cache: " + job.getName());
          holdIn("process", 0);
        }
  }

  /* (non-Javadoc)
   * @see model.modeling.atomic#deltint()
   */
  @Override
  public void deltint() {
    if (currentValueSet != null) {
      log.out("--- Process data recorder " + currentValueSet.getKey() + " ----");
    }
    passivate();
  }
}
